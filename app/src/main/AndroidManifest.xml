<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kr.co.metisinfo.sharingcharger">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--블루투스 사용-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!--앱 위치 허용-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STAT" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIMAX_STATE" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="kr.co.metisinfo.sharingcharger.base.ThisApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon512"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_icon512"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon,android:roundIcon">

        <!-- 카카오앱 키 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="14b4ccd36367ca07adefc15884a0b602" />

        <!-- 웹뷰 및 위치 서비스 사용하지 않는 경우 설정 -->
        <meta-data
            android:name="com.kakao.sdk.kakaonavi.useWebView"
            android:value="false" />

        <activity android:name="kr.co.metisinfo.sharingcharger.view.activity.IntroActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- PasswordChangeActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.PasswordChangeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- PasswordResetActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.PasswordResetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- SettingActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- LoginActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- UserRegisterActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.UserRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- MainActivity -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- 예약진행 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.ReservationProgressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- 충전기 조건검색 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.MarkerSearchConditionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBarTransparent" />

        <!-- 키워드 검색 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.SearchKeywordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- 전자지갑 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.WalletActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- 충전기 검색 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.SearchChargerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBarTransparent" />

        <!-- 충전 화면 -->
        <activity
            android:name="kr.co.metisinfo.sharingcharger.view.activity.ChargingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBarTransparent" />

    </application>
</manifest>