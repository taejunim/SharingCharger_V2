<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <include
            android:id="@+id/include_header"
            layout="@layout/layout_header"
            android:layout_width="fill_parent"
            android:layout_height="46dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/include_header"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/admin_charger_manage_header"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white">

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@+id/dropdown_3"
                    android:spinnerMode="dialog"
                    android:layout_marginStart="20dp"
                    android:textSize="17dp"
                    android:background="@color/header_dummy"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:visibility="visible" />
                <Button
                    android:id="@+id/search_button"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/total_profit_point_label"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_border_purple"
                    android:gravity="center"
                    android:text="조회"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/monthly_profit_point_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/admin_charger_manage_header"
                android:layout_marginTop="0dp" />

        </RelativeLayout>

    </RelativeLayout>

</layout>