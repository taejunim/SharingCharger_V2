<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/dialog_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/point_charge_message"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/layout_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/dialog_txt"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_price10000"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_border_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="10,000원"/>

            <Button
                android:id="@+id/btn_price30000"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_toEndOf="@id/btn_price10000"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_border_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="30,000원"/>

            <Button
                android:id="@+id/btn_price50000"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/btn_price30000"
                android:background="@drawable/button_border_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="50,000원"/>

            <Button
                android:id="@+id/btn_priceOwn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_toEndOf="@id/btn_price50000"
                android:background="@drawable/button_border_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="직접 입력"/>

        </LinearLayout>

    <TextView
        android:id="@+id/priceInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="충전 금액"
        android:textSize="15dp"
        android:layout_below="@id/layout_body"
        android:layout_alignStart="@id/layout_body"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/priceInputText"
        android:layout_alignBottom="@id/priceInputText"
        android:layout_marginStart="30dp"
        android:text="10,000"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:focusable="true"
        android:background="@color/header_dummy"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceInputText"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_no_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_red"
                style="?android:attr/buttonBarButtonStyle"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="2dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/dialog_ok_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_border_blue"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="20dp"
                android:textSize="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</layout>