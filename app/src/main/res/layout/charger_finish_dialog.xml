<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_ok_btn">

        <TextView
            android:id="@+id/finish_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="충전종료 결과"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/first_deduction_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finish_dialog_title"
            android:layout_marginTop="20dp"
            android:text="선차감 포인트"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/first_deduction_point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/first_deduction_point"
            android:layout_toStartOf="@+id/first_deduction_point_p"
            android:text="3,000"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/first_deduction_point_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/first_deduction_point"
            android:layout_alignParentEnd="true"
            android:text="@string/point"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/prediction_refund_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_deduction_point"
            android:layout_marginTop="20dp"
            android:text="예상 환불 포인트"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/prediction_refund_point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/prediction_refund_point"
            android:layout_toStartOf="@+id/prediction_refund_point_p"
            android:text="3,000"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/prediction_refund_point_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/prediction_refund_point"
            android:layout_alignParentEnd="true"
            android:text="@string/point"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/filling_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prediction_refund_point"
            android:layout_marginTop="20dp"
            android:text="실제 소진 포인트"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/filling_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/filling_amount"
            android:layout_toStartOf="@+id/filling_amount_kwh"
            android:text="40"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/filling_amount_kwh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/filling_amount"
            android:layout_alignParentEnd="true"
            android:text="@string/point"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/reservation_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filling_amount"
            android:layout_marginTop="20dp"
            android:text="예약 시작 시간"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/reservation_start_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reservation_start_time"
            android:layout_alignParentEnd="true"
            android:text="20:21:55"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/reservation_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservation_start_time"
            android:layout_marginTop="20dp"
            android:text="예약 종료 시간"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/reservation_end_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reservation_end_time"
            android:layout_alignParentEnd="true"
            android:text="20:21:55"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/charg_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservation_end_time"
            android:layout_marginTop="20dp"
            android:text="충전 시작 시간"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/charg_start_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/charg_start_time"
            android:layout_alignParentEnd="true"
            android:text="20:21:55"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/charg_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/charg_start_time"
            android:layout_marginTop="20dp"
            android:text="충전 종료 시간"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/charg_end_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/charg_end_time"
            android:layout_alignParentEnd="true"
            android:text="21:51:55"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/charging_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/charg_end_time"
            android:layout_marginTop="20dp"
            android:text="@string/search_condition_end_date"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/charging_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignBaseline="@+id/charging_time"
            android:layout_alignParentEnd="true"
            android:text="91"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/dialog_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_border_blue"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/ok"/>

</androidx.constraintlayout.widget.ConstraintLayout>
