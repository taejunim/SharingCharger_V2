<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:padding="5dp">

            <EditText
                android:id="@+id/edit_search_keyword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="장소를 입력하여 주십시오."
                android:paddingLeft="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:focusable="true"
                android:background="@color/header_dummy"
                app:layout_constraintRight_toLeftOf="@+id/btn_close"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/edit_search_keyword"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@mipmap/icon_x"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_condition_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/search_layout"
            android:padding="5dp">

            <ImageView
                android:id="@+id/search_keyword_my_place_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/correct_gray"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf ="@id/search_keyword_my_place_txt"/>

            <TextView
                android:id="@+id/search_keyword_my_place_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_condition_my_place"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"
                android:textColor="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_keyword_my_place_img" />

            <ImageView
                android:id="@+id/search_keyword_map_place_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/correct_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf ="@id/search_keyword_my_place_txt"/>

            <TextView
                android:id="@+id/search_keyword_map_place_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_condition_map_place"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_keyword_map_place_img" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_keyword_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_condition_layout"
            android:padding="5dp"
            android:background="@color/dark_gray"/>

    </RelativeLayout>

</layout>