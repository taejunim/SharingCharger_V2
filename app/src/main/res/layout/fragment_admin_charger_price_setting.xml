<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/modification_button">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/charger_price_setting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:text="충전기 단가 설정"/>

                <TextView
                    android:id="@+id/charger_price_setting_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@id/charger_price_setting_title"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@id/charger_price_setting_title"
                    android:textSize="17sp"
                    android:text="요금 설정"/>

                <LinearLayout
                    android:id="@+id/layout_price_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/charger_price_setting_label"
                    android:layout_alignStart="@id/charger_price_setting_title"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/price_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:checkedButton="@+id/price_2000"
                        android:background="@drawable/toggle_background"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/price_2000"
                            style="@style/CustomRadioGroup"
                            android:layout_marginStart="2dp"
                            android:text="2,000"/>

                        <RadioButton
                            android:id="@+id/price_1500"
                            style="@style/CustomRadioGroup"
                            android:text="1,500"/>

                        <RadioButton
                            android:id="@+id/price_1000"
                            style="@style/CustomRadioGroup"
                            android:text="1,000"/>

                        <RadioButton
                            android:id="@+id/price_direct"
                            style="@style/CustomRadioGroup"
                            android:layout_marginEnd="2dp"
                            android:text="직접 입력"/>

                    </RadioGroup>

