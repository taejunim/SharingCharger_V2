<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/charger_price_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="충전기 단가 설정"/>

        <TextView
            android:id="@+id/charger_price_setting_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/charger_price_setting_title"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/charger_price_setting_title"
            android:textSize="17sp"
            android:text="요금 설정"/>

        <LinearLayout
            android:id="@+id/layout_price_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/charger_price_setting_label"
            android:layout_alignStart="@id/charger_price_setting_title"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_price2000"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_white_gray"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="2,000원"/>

            <TextView
                android:id="@+id/btn_price1500"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_toEndOf="@id/btn_price2000"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_border_white_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="1,500원"/>

            <TextView
                android:id="@+id/btn_price1000"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_toEndOf="@id/btn_price1500"
                android:background="@drawable/button_border_white_gray"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="1,000원"/>

            <TextView
                android:id="@+id/btn_priceOwn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_toEndOf="@id/btn_price1000"
                android:background="@drawable/button_border_white_gray"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="직접 입력"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단가 입력"
            android:layout_below="@id/layout_price_button"
            android:layout_marginTop="50dp"
            android:layout_alignStart="@id/charger_price_setting_title"/>

        <EditText
            android:id="@+id/edit_text_old_price"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/text_old_price"
            android:layout_alignBottom="@id/text_old_price"
            android:layout_marginStart="30dp"
            android:text="2,000"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1"
            android:focusable="true"
            android:enabled="false"
            android:background="@color/header_dummy"/>

        <TextView
            android:id="@+id/text_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단가 입력"
            android:layout_below="@id/text_old_price"
            android:layout_marginTop="30dp"
            android:layout_alignStart="@id/charger_price_setting_title"/>

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/text_new_price"
            android:layout_alignBottom="@id/text_new_price"
            android:layout_marginStart="30dp"
            android:text="2,000"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1"
            android:focusable="true"
            android:background="@color/header_dummy"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/Edit"
            android:textColor="@color/white"
            android:background="@color/purple"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</layout>