<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/charge_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/list_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/point_history_state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_number_text"
            android:layout_toStartOf="@id/point_history_point"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="관광대학교 주차장"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/point_history_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_number_text"
            android:layout_toStartOf="@id/point_history_point"
            android:layout_below="@id/point_history_state_txt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:text="충전기 설명"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/point_history_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charger_manage_waiting"
            android:layout_alignBaseline="@+id/list_number_text"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_gray"/>

    </RelativeLayout>

</layout>