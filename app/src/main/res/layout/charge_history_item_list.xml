<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/charge_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp">

        <!-- 장치이름-->
        <ImageView
            android:id="@+id/charge_history_location_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/blue_marker_40"/>

        <TextView
            android:id="@+id/charge_history_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/charge_history_location_img"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:text="관광대학교 주차장"/>

        <!-- 사용날짜-->
        <ImageView
            android:id="@+id/charge_history_time_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/charge_history_location_img"
            android:src="@mipmap/clock_gray"/>

        <TextView
            android:id="@+id/charge_history_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/charge_history_time_img"
            android:layout_below="@+id/charge_history_location_img"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="2020-07-23 18:00 ~ 2020-07-23 21:30"/>

        <!-- 사용 포인트-->
        <ImageView
            android:id="@+id/charge_history_point_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/charge_history_time_img"
            android:src="@mipmap/coin_gray"/>

        <TextView
            android:id="@+id/charge_history_point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/charge_history_point_img"
            android:layout_below="@+id/charge_history_time_img"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="2,562"/>

        <TextView
            android:id="@+id/charge_history_point1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/charge_history_time_img"
            android:layout_toEndOf="@+id/charge_history_point_txt"
            android:text="포인트 사용"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/charge_history_point_img"
            android:layout_marginTop="20dp"
            android:background="@color/dark_gray"/>

    </RelativeLayout>

</layout>