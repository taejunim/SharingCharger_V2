<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <include
            android:id="@+id/include_header"
            layout="@layout/layout_header"
            android:layout_width="fill_parent"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/setting_text_dummy"
            style="@style/header_dummy"
            android:layout_below="@id/include_header" />

        <RelativeLayout
            android:id="@+id/setting_password_layout"
            style="@style/margin_start_end_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/setting_text_dummy">

            <TextView
                android:id="@+id/setting_change_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/change_password"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/next" />
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:id="@+id/setting_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/setting_password_layout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:background="@color/whitegray" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/setting_card_layout"
            style="@style/margin_start_end_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_view"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/setting_card_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/setting_card"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/next" />

        </RelativeLayout>



        <!---->
        <View
            android:id="@+id/setting_view1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/setting_card_layout"
            android:layout_marginBottom="25dp"
            android:background="@color/whitegray" />

        <RelativeLayout
            android:id="@+id/setting_time_layout"
            android:visibility="gone"
            style="@style/margin_start_end_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_view1"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/setting_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/setting_time"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/next" />

        </RelativeLayout>

        <!---->


        <TextView
            android:id="@+id/setting_text_dummy1"
            style="@style/header_dummy"
            android:layout_below="@id/setting_time_layout" />

        <Button
            android:id="@+id/setting_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text_dummy1"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/gray_button"
            android:text="@string/setting_logout"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>