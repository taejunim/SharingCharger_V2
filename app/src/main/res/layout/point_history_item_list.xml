<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/charge_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/point_history_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:text="2020-07-23 18:00"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/point_history_approval_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_alignBaseline="@id/point_history_date_txt"
            android:textSize="12dp"
            android:text="000000"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/point_history_state_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/point_history_date_txt"
            android:text="부분 환불"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/point_history_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 1,350"
            android:layout_alignBaseline="@+id/point_history_state_txt"
            android:layout_alignEnd="@id/point_history_state_txt"
            android:textColor="@color/blue_button"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/point_history_point"
            android:layout_marginTop="15dp"
            android:background="@color/dark_gray"/>

    </RelativeLayout>

</layout>