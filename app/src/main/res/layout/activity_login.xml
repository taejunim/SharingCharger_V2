<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login">

        <EditText
            android:id="@+id/login_id"
            style="@style/margin_start_end_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/bright_white"
            android:textColorHint="@color/bright_white"
            android:hint="@string/login_id_hint"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:privateImeOptions="defaultInputmode=english"
            android:singleLine="true" />

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bright_white"
            android:textColorHint="@color/bright_white"
            android:hint="@string/login_pw_hint"
            android:importantForAutofill="no"
            android:layout_below="@id/login_id"
            style="@style/margin_start_end_20"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/login_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/margin_start_end_20"
            android:layout_below="@id/login_pw">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_blue_click"
                style="?android:attr/buttonStyle"
                android:text="@string/login_btn"
                android:textColor="@color/white"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/login_register_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_weight="1"
                android:background="@color/gray_button"
                style="?android:attr/buttonStyle"
                android:text="@string/login_register"
                android:textColor="@color/white"
                android:textSize="16dp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_linear_layout"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/login_find_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@+id/login_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:text="@string/login_find_id" />

            <TextView
                android:id="@+id/login_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="/" />

            <TextView
                android:id="@+id/login_reset_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/login_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:text="@string/change_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
</layout>