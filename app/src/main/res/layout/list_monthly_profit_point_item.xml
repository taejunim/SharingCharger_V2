<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/charge_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/month_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:text="2021년 09월"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/monthly_profit_point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,350 p"
            android:layout_alignBaseline="@+id/month_txt"
            android:layout_alignEnd="@id/month_txt"
            android:textColor="@color/blue_button"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:background="@color/dark_gray"/>

    </RelativeLayout>

</layout>