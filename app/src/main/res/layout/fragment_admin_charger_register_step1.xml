<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            android:id="@+id/include_charger_register_menu"
            layout="@layout/layout_charger_register_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/include_charger_register_menu"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="충전기 전원을 켜고 하단의 충전기 검색을 눌러주세요."/>

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_above="@id/include_charger_register_footer"
            android:layout_centerInParent="true"
            android:layout_marginBottom="100dp"
            android:background="@color/deep_purple"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="충전기 검색"/>
        <include
            android:id="@+id/include_charger_register_footer"
            layout="@layout/layout_charger_register_footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</layout>