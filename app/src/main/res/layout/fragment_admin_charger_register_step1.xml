<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <include
            android:id="@+id/include_charger_register_menu"
            layout="@layout/layout_charger_register_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/charger_search_guide_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/include_charger_register_menu"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="충전기 전원을 켜고 하단의 충전기 검색을 눌러주세요."/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/charger_search_ble_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_below="@+id/charger_search_guide_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/charger_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:gravity="center"
                android:text="검색된 충전기 BLE 번호"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/charger_search_ble_text"/>

            <TextView
                android:id="@+id/charger_search_ble_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:minHeight="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/charger_search_text"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/neutral_tint"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/charger_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/include_charger_register_footer"
            android:text="충전기 검색"
            android:textColor="@color/white"
            android:background="@color/deep_purple"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>


        <include
            android:id="@+id/include_charger_register_footer"
            layout="@layout/layout_charger_register_footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</layout>