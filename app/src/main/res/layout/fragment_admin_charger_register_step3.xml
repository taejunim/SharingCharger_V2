<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp">

                <include
                    android:id="@+id/include_charger_register_menu"
                    layout="@layout/layout_charger_register_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/image_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/include_charger_register_menu"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/map_marker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/edit_text_address"
                    android:layout_alignStart="@id/edit_text_address"
                    android:text="주소"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/edit_text_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/image_address"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/image_address"
                    android:autoSizeTextType="uniform"
                    android:background="@color/header_dummy"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/detail_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_text_address"
                    android:layout_alignStart="@+id/edit_text_address"
                    android:layout_marginTop="10dp"
                    android:text="상세 주소 : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_text_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBaseline="@+id/detail_address_text"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/detail_address_text"
                    android:background="@color/header_dummy"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/image_shared_type"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/detail_address_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/clock_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/radio_sharing"
                    android:layout_alignStart="@id/radio_sharing"
                    android:text="항시 운영 여부"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_sharing"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/image_shared_type"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/image_shared_type"
                    android:background="@color/header_dummy"
                    android:checkedButton="@+id/partial_sharing"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/partial_sharing"
                        style="@style/CustomRadioGroup"
                        android:layout_marginStart="2dp"
                        android:text="부분 운영" />

                    <RadioButton
                        android:id="@+id/sharing"
                        style="@style/CustomRadioGroup"
                        android:layout_marginEnd="2dp"
                        android:text="항시 운영" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/image_parking_fee_yn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/image_shared_type"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/radio_parking_fee"
                    android:layout_alignStart="@id/radio_parking_fee"
                    android:text="주차요금 여부"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_parking_fee"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/image_parking_fee_yn"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/image_parking_fee_yn"
                    android:background="@color/header_dummy"
                    android:checkedButton="@+id/parking_fee_n"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/parking_fee_n"
                        style="@style/CustomRadioGroup"
                        android:layout_marginStart="2dp"
                        android:text="없음" />

                    <RadioButton
                        android:id="@+id/parking_fee_y"
                        style="@style/CustomRadioGroup"
                        android:layout_marginEnd="2dp"
                        android:text="있음" />
                </RadioGroup>


                <ImageView
                    android:id="@+id/image_cable_exist_yn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/image_parking_fee_yn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/charge_end" />

                <TextView
                    android:id="@+id/text_cable_exist_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radio_parking_fee"
                    android:layout_alignStart="@id/radio_cable_exist"
                    android:layout_marginTop="20dp"
                    android:text="케이블 존재 여부"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_cable_exist"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/text_cable_exist_yn"
                    android:layout_alignBaseline="@+id/image_cable_exist_yn"
                    android:layout_alignLeft="@+id/radio_parking_fee"
                    android:layout_marginEnd="30dp"

                    android:layout_toEndOf="@id/image_cable_exist_yn"

                    android:background="@color/header_dummy"
                    android:checkedButton="@+id/cable_exist_y"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/cable_exist_n"
                        style="@style/CustomRadioGroup"
                        android:layout_marginStart="2dp"
                        android:text="없음" />

                    <RadioButton
                        android:id="@+id/cable_exist_y"
                        style="@style/CustomRadioGroup"
                        android:layout_marginEnd="2dp"
                        android:text="있음" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/image_charge_type"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/radio_cable_exist"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/battery_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/radio_charge_type"
                    android:layout_alignStart="@id/radio_charge_type"
                    android:text="충전 타입"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_charge_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/image_charge_type"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/image_parking_fee_yn"
                    android:background="@color/header_dummy"
                    android:checkedButton="@+id/charge_type_standard"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/charge_type_standard"
                        style="@style/CustomRadioGroup"
                        android:layout_marginStart="2dp"
                        android:text="완속" />

                    <RadioButton
                        android:id="@+id/charge_type_slow"
                        style="@style/CustomRadioGroup"
                        android:layout_marginEnd="2dp"
                        android:text="저속" />
                </RadioGroup>


                <ImageView
                    android:id="@+id/image_parking_fee_description"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/radio_charge_type"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/document" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/edit_parking_fee_description"
                    android:layout_alignStart="@id/edit_parking_fee_description"
                    android:text="주차요금 설명"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_parking_fee_description"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignTop="@id/image_parking_fee_description"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/image_parking_fee_description"
                    android:background="@color/header_dummy"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </ScrollView>

        <include
            android:id="@+id/include_charger_register_footer"
            layout="@layout/layout_charger_register_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</layout>