<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/charge_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/charger_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/blue_marker_40"/>

        <TextView
            android:id="@+id/charger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/charger_status_image"
            android:text="관광대학교 주차장"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/charger_ble_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/charger_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/charger_manage_charger_ble_text"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/charger_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/charger_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/charger_status"
            android:layout_toEndOf="@id/charger_status_image"
            android:text="충전기 주소"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/charger_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/charger_address"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/charger_status"
            android:layout_toEndOf="@id/charger_status_image"
            android:text="상세주소"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/charger_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/charger_name"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:text="@string/charger_manage_waiting"
            android:textColor="@color/blue_text"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bright_white"/>

    </RelativeLayout>

</layout>